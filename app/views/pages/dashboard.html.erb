<div class="row">

<div class="col-md-4">
<h3 class="text-center">My Books <%= link_to "New Book", new_book_path, class: "btn btn-primary btn-sm" %></h3>
<table class="table table-condensed"> 
<thead> 
	<tr> 
		<th>Id</th> 
		<th> Name</th> 
		<th>Availability</th> 
		<th></th> 
	</tr> 
</thead> 
<tbody> 
	<% @books.each do |book| %>
	<tr> 
		<td><%= book.id %></td> 
		<td><%= link_to book.name, book_path(book) %></td> 
		<td><%= book.availability %></td> 
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<% end %>
	</tr> 
</tbody> 
</table>
</div>

<div class="col-md-4">
<h3 class="text-center">My Purchases</h3>

</div>

<div class="col-md-4">
<h3 class="text-center">My Sales</h3>
</div>

</div>


